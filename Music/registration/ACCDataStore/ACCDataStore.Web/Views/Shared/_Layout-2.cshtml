<!DOCTYPE html>
<html data-ng-app="app">
<head>

    <title>@ViewBag.Title - Alpha Team App</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="~/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/bower_components/angular-ui-select/dist/select.min.css">
    <link rel="stylesheet" href="~/bower_components/angular-datatables/dist/css/angular-datatables.min.css">
    <link href="https://fonts.googleapis.com/css?family=Homemade+Apple" rel="stylesheet">
    <style>
        /* Change color of dropdown links on hover */
        .dropdown-menu a:hover {
            background-color: #f1f1f1;
        }

        /* Show the dropdown menu on hover */
        .dropdown:hover .dropdown-menu {
            display: block;
            background-color: #aa9c9c;
        }

        /* Change the background color of the dropdown button when the dropdown content is shown */
        .dropdown:hover .dropdown-toggle {
            background-color: #9eb9b3;
            color: darkgoldenrod;
        }
    </style>
    @RenderSection("style", required: false)
    <script type="text/javascript" src="~/bower_components/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/bower_components/angular/angular.min.js"></script>
    <script type="text/javascript" src="~/bower_components/angular-sanitize/angular-sanitize.min.js"></script>
    <script type="text/javascript" src="~/bower_components/angular-route/angular-route.min.js"></script>
    <script type="text/javascript" src="~/bower_components/angular-ui-router/release/angular-ui-router.min.js"></script>
    <script type="text/javascript" src="~/bower_components/angular-ui-select/dist/select.min.js"></script>
    <script type="text/javascript" src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/bower_components/angular-datatables/dist/angular-datatables.min.js"></script>
    <script type="text/javascript" src="~/bower_components/highcharts/highcharts.js"></script>
    <script type="text/javascript" src="~/bower_components/highcharts/highcharts-3d.js"></script>
    <script type="text/javascript" src="~/bower_components/highcharts-ng/dist/highcharts-ng.min.js"></script>
    <script type='text/javascript' src='path/to/ng-caps-lock.min.js'></script>

    @RenderSection("scripts", required: false)
    <script>
        var sAppContextPath = '@Url.Content("~")';
    </script>

</head>
<body ng-app="rootApp" style="height:100%; background: lightgrey">

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Aberdeen City Council", "Index", "Index", new { area = "Index" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-left">

                    <li><a href="@Url.Action("Index", "Index", new { area = "Index" })">Home</a></li>

                    <li><a href="@Url.Action("Contact", "Index", new { area = "Index" })">Contact</a></li>

                    @*<li><a href="@Url.Action("Index", "PrimarySchool", new { area = "SchoolProfiles" })">Primary School</a></li>*@

                </ul>


                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @if (!Request.IsAuthenticated)
                        {
                        <li><a href="@Url.Action("Index", "Registration", new { area = "Authorisation" })">Register</a></li>
                        <li><a href="@Url.Action("Index", "Login", new { area = "Login" })">Login</a></li>
                        }

                        <li class="dropdown">

                            @if (Request.IsAuthenticated)
                            {

                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    <strong style="color: white">
                                        <font style="color:white">Hello, @Html.Encode(User.Identity.Name)</font>
                                    </strong>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="@Url.Action("Index", "ProfilePage",
                                       new { area = "ProfilePage" })">Profile Page</a>
                                    </li>

                                    <li>
                                        @if (Request.IsAuthenticated && User.Identity.Name == "admin@gmail.com")
                                        {
                                            <a href="@Url.Action("Index", "UserSettings", new { area = "Settings" })">Admin Control</a>
                                        }
                                    </li>

                                    <li><a href="@Url.Action("LogOut", "Login", new { area = "Login" })">Logout</a></li>
                                </ul>
                            }
                        </li>
                    </ul>

                    @*---------------------------<><><><><> THIS IS FOR THE POP UP ABOUT PAGE -------------*@
                </div>


            </div>
        </div>



        <div class="container body-content">
        </div>

        @*@Styles.Render("~/Content/css")
            @Scripts.Render("~/bundles/modernizr")
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")*@

        @RenderBody()

        <footer style="    position:fixed;
               left:0px;
               bottom:0px;
               height:30px;
               width:100%;
              background-color: black;
              text-align: center;">
            <p style="color:white">&copy; @DateTime.Now.Year - Alpha Team App</p>
        </footer>

    </body>

</html>
