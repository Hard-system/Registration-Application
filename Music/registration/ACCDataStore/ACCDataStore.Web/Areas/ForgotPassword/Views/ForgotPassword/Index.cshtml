@using (Html.BeginForm("SendEmail", "ForgotPassword"))
{

    <div class="container">
        <div class="row">

            <div class="col-md-6 col-md-offset-3">
                <h4 style="border-bottom: 1px solid #c5c5c5;">
                    <i class="glyphicon glyphicon-user">
                    </i>
                    Account Access
                </h4>

                <div>
                    <form accept-charset="UTF-8" role="form" id="login-recordar" ng-submit="vm.login()">
                        <fieldset>
                            <span class="help-block">
                                Email address you use to log in to your account
                                <br>
                                We will send you an email with instructions to choose a new password.
                            </span>
                            <div class="form-group input-group" ng-class="{ 'has-error': form.email.$dirty && form.email.$error.required }">
                                <span class="input-group-addon">
                                    @@

                                </span>
                                <input class="form-control" placeholder="Email" name="email" type="email" required="" autofocus="" ng-model="mAddEditView.User.Email" />

                            </div>
                            <button type="submit" class="btn btn-primary btn-block" value="Login">Request Change Password</button>

                        </fieldset>
                    </form>
                </div>



            </div>
        </div>
    </div>
}
@if (TempData["Message"] != null)
            {
    <div style="text-align:center; border:solid; border-color:red; margin-left:24%; margin-right:24%; border-radius:5px;">
        <span style="color:red; text-align:center; font-size: 25px;">@TempData["Message"].ToString()</span>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
